@model List<NoticiasEnriquecidas.Models.Post>

<div class="container py-5">
    <h2 class="mb-5 text-center text-primary fw-bold display-5" style="letter-spacing: 1.5px;">
        Últimas Noticias
    </h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-5">
        @foreach (var post in Model)
        {
            <div class="col">
                <div class="card h-100 shadow border-0 rounded-5 overflow-hidden position-relative">
                    <div class="card-img-top bg-gradient" style="height:140px; background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);">
                        <div class="d-flex align-items-center justify-content-center h-100 text-white fw-bold fs-3" style="text-shadow: 1px 1px 4px rgba(0,0,0,0.7);">
                            Noticias
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge bg-primary">ID: @post.Id</span>
                            <span class="text-muted fst-italic small">@post.Body?.Length ?? 0 chars</span>
                        </div>

                        <h5 class="card-title mb-3">
                            <a asp-controller="Noticias" asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none text-dark fw-semibold">
                                @post.Title
                            </a>
                        </h5>

                        <p class="card-text text-truncate" style="flex-grow: 1; min-height: 4.5em;">
                            @post.Body
                        </p>

                        <a asp-controller="Noticias" asp-action="Details" asp-route-id="@post.Id" class="btn btn-gradient mt-auto px-4 py-2 fw-semibold shadow-lg text-white">
                            Leer más
                            <svg xmlns="http://www.w3.org/2000/svg" class="ms-2" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                                <line x1="5" y1="12" x2="19" y2="12" />
                                <polyline points="12 5 19 12 12 19" />
                            </svg>
                        </a>
                    </div>
                    <div class="card-footer bg-white border-0 pt-2 text-end">
                        <small class="text-muted fst-italic">Publicado el @DateTime.Now.ToString("dd MMM yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .btn-gradient {
        background: linear-gradient(90deg, #3b82f6, #2563eb);
        color: white !important;
        border-radius: 50px;
        transition: background 0.3s ease, transform 0.3s ease;
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.5);
        text-shadow: 0 0 5px rgba(0,0,0,0.2);
    }
    .btn-gradient:hover {
        background: linear-gradient(90deg, #2563eb, #3b82f6);
        transform: scale(1.05);
        color: #f3f4f6 !important;
        text-decoration: none;
    }

    .card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 25px rgba(59, 130, 246, 0.35);
        transition: all 0.3s ease;
    }
    .card {
        transition: all 0.3s ease;
    }
</style>
